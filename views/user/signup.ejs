<%- include('../header') -%>
<div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="text-center pt-5" id="login">
          <div class="container border py-5">
            <div class="title">
              <h2 class="font-weight-bold">Sign Up</h2>
            </div>
            
            <form action="" method="post" class="pt-3" id="'form">
              <% if(locals.message) { %>
              <div>
                <p class="text-danger"><%= message %> </p>
              </div>
              <% } %>

              <div class="form-group">
                <input type="text" class="form-control" placeholder="Username" name="name" required><br> 
              </div>
             
              
             
              <div class="form-group">
                <input type="email" id="email-error" class="form-control" placeholder="Email" name="email" required><br>
              </div>
              <div class="form-group">
                <input type="number" id="phone-error" class="form-control" placeholder="Phone" name="phone" required><br>
              </div>
              <div class="form-group">
                <input type="password" id="password-error" class="form-control" name="password" placeholder="Password"  required><br>
              </div>
              <div class="form-group">
                <input type="password" id="confirm-password" class="form-control" onfocusout="confirmPassword()" name="confpassword" placeholder="Confirm Password" required><br>
              </div>
              
                <div class="form-group">
                  
                  <button type="submit" class="btn btn-danger btn-block mt-3 text-capitalize" ">Sign Up</button>
                 
                  <a class="text-capitalize btn btn-light mt-3 rounded-3 text-decoration-none text-danger" href="/">Already have an account?Login here</a>
                 
                </div>
                
                  
                 
           
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
 <script src="/script/user-script.js"></script>

<%- include('../footer') -%>